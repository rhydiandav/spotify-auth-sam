{
  "compilerOptions": {
    "lib": ["es2015"],
    "module": "commonjs",
    "sourceMap": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "moduleResolution": "node",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "es2017",
    "outDir": "lib"
  },
  "include": ["./**/*.ts"],
  "exclude": ["node_modules/**/*", ".vscode/**/*", "**/__tests__/*"]
}
